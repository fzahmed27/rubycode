def no_repeats?(song_name, songs)
  # iterate over songs to song_name repeats
  # does song_name exist more than once one index after another
  i = 0
  while i < songs.length
  	if songs[i] == song_name && songs[i+1] == song_name
      		return true
    end
	i += 1
  end
  false    
end

song_name = "Gonna Give You Up"

songs = ["Call Me Maybe", "Protect Ya Neck", "Call Me Maybe", "Protect Ya Neck", "Gonna Give You Up"]


puts no_repeats?(song_name, songs)
